  @Override
  public void handleSkinVariantTypeChange(Enum<?> variant) {
    if (!(variant instanceof CatSkinVariant catSkinVariant)) {
      return;
    }

    // Map CatSkinVariant to Minecraft CatVariant
    ResourceKey<CatVariant> catVariantKey =
      switch (catSkinVariant) {
        case ALL_BLACK -> CatVariant.ALL_BLACK;
        case BLACK -> CatVariant.BLACK;
        case BRITISH_SHORTHAIR -> CatVariant.BRITISH_SHORTHAIR;
        case CALICO -> CatVariant.CALICO;
        case JELLIE -> CatVariant.JELLIE;
        case OCELOT, TABBY -> CatVariant.TABBY;
        case PERSIAN -> CatVariant.PERSIAN;
        case RAGDOLL -> CatVariant.RAGDOLL;
        case RED -> CatVariant.RED;
        case SIAMESE -> CatVariant.SIAMESE;
        case WHITE -> CatVariant.WHITE;
      };

    // Get the Holder from the registry and set it
    Holder<CatVariant> catVariantHolder =
        BuiltInRegistries.CAT_VARIANT.getHolder(catVariantKey).orElse(null);
    if (catVariantHolder != null) {
      this.setVariant(catVariantHolder);
    }
  }
